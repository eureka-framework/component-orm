{
  "name": "eureka/component-orm",
  "description": "PHP orm library.",
  "type": "library",
  "minimum-stability": "stable",
  "license": "MIT",

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }

  ],

  "autoload": {
    "psr-4": {
      "Eureka\\Component\\Orm\\": "./src",
      "Eureka\\Component\\Orm\\Script\\": "./scripts"
    }
  },

  "autoload-dev": {
    "psr-4": {
      "Eureka\\Component\\Orm\\Tests\\": "./tests"
    }
  },

  "require": {
    "php": "8.1.*||8.2.*||8.3.*",
    "ext-pdo": "*",

    "eureka/component-database": "^3.2",
    "eureka/component-validation": "^5.2",

    "psr/cache": "^1.0||^2.0||^3.0",
    "psr/log": "^1.1||^2.0||^3.0"
  },

  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "eureka/component-console": "^6.0",
    "phpstan/phpstan": "^1.10",
    "phpstan/phpstan-phpunit": "^1.3",
    "phpunit/phpcov": "^9.0",
    "phpunit/phpunit": "^10.2",
    "squizlabs/php_codesniffer": "^3.7",
    "symfony/cache": "^5.4||^6.3"
  },

  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
