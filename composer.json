{
  "name": "eureka/component-orm",
  "description": "PHP orm library.",
  "type": "library",
  "minimum-stability": "stable",
  "license": "MIT",

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }

  ],

  "autoload": {
    "psr-4": {
      "Eureka\\Component\\Orm\\": "./src",
      "Eureka\\Component\\Orm\\Script\\": "./scripts"
    }
  },

  "autoload-dev": {
    "psr-4": {
      "Eureka\\Component\\Orm\\Tests\\Unit\\": "./tests/unit"
    }
  },

  "config": {
    "sort-packages": true
  },

  "require": {
    "php": "8.1.*||8.2.*||8.3.*",
    "ext-pdo": "*",

    "eureka/component-database": "^3.2",
    "eureka/component-validation": "^5.2",
    "eureka/component-console": "^6.1.0",

    "psr/cache": "^1.0||^2.0||^3.0",
    "psr/log": "^1.1||^2.0||^3.0"
  },

  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.75.0",
    "maglnet/composer-require-checker": "^3.8||^4.7.1",
    "phpstan/phpstan": "^1.12.23",
    "phpstan/phpstan-phpunit": "^1.4.2",
    "phpstan/phpstan-strict-rules": "^1.6.2",
    "phpunit/phpcov": "^9.0.2",
    "phpunit/phpunit": "^10.5.45",
    "symfony/cache": "^5.4.0||^6.4.20"
  }
}
